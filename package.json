{
  "name": "whisper-chat",
  "version": "0.1.0",
  "description": "Anonymous P2P CLI chat over SSH",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "whisper": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts server",
    "dev:bootstrap": "tsx src/index.ts bootstrap",
    "start": "node dist/index.js server",
    "start:bootstrap": "node dist/index.js bootstrap",
    "generate-host-key": "tsx scripts/generate-host-key.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "libp2p": "^1.2.0",
    "@chainsafe/libp2p-noise": "^15.0.0",
    "@chainsafe/libp2p-yamux": "^6.0.0",
    "@chainsafe/libp2p-gossipsub": "^13.0.0",
    "@libp2p/websockets": "^8.0.0",
    "@libp2p/kad-dht": "^12.0.0",
    "@libp2p/circuit-relay-v2": "^1.0.0",
    "@libp2p/identify": "^2.0.0",
    "@libp2p/crypto": "^4.0.0",
    "@multiformats/multiaddr": "^12.0.0",
    "ssh2": "^1.15.0",
    "blessed": "^0.1.81",
    "@noble/hashes": "^1.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "@types/node": "^20.0.0",
    "@types/blessed": "^0.1.25",
    "@types/ssh2": "^1.11.0",
    "@types/uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "chat",
    "p2p",
    "ssh",
    "anonymous",
    "libp2p",
    "cli"
  ],
  "license": "MIT"
}
