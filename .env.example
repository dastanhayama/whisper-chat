# Whisper Chat Configuration
# Copy this file to .env and modify as needed

# SSH Server
SSH_PORT=2222
SSH_HOST_KEY_PATH=./keys/host.key

# P2P Network
P2P_PORT=4001
# Comma-separated list of bootstrap node multiaddrs
# Example: /ip4/1.2.3.4/tcp/4001/ws/p2p/12D3KooW...
BOOTSTRAP_NODES=

# Chat Settings
DEFAULT_ROOM=lobby
MAX_MESSAGE_SIZE=4096
MAX_MESSAGES_IN_MEMORY=100
RATE_LIMIT=10
MAX_NICK_LENGTH=32
MAX_ROOM_NAME_LENGTH=32

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Bootstrap node mode
IS_BOOTSTRAP=false
